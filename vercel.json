{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/api(/.*)?$",
      "dest": "/api/index.js"
    },
    {
      "src": "^/(public|assets)/.*",
      "dest": "/dist/$0"
    },
    {
      "src": "^/(?!api/|public/|assets/).*\\..*$",
      "dest": "/dist/public/$0"
    },
    {
      "src": "^/(?!api/).*$",
      "dest": "/dist/public/index.html"
    }
  ]
}
